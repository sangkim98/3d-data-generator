<scene version="3.4.0">

<!-- Defaults, these can be set via the command line: -Darg=value -->

	<integrator type="path">
	</integrator>

<!-- Camera and Rendering Parameters -->

	<sensor type="perspective">
	    <float name="fov" value="70"/>
	    <transform name="to_world">
		<!-- Move and rotate the camera so that looks from (1, 1, 1) to (1, 2, 1)
		    and the direction (0, 0, 1) points "up" in the output image -->
			<lookat origin="3, 40, 40" target="0, 20, 0" up="0, 1, 0"/>
	    </transform>
	    <!-- film -->
	    <film type="hdrfilm">
		<integer name="width" value="1024"/>
		<integer name="height" value="1024"/>
	    </film>
	    <sampler type="multijitter">
	    <integer name="sample_count" value="64"/>
		</sampler>
	</sensor>

<!-- Materials -->

	<bsdf type="principled" id="mat-Sphere">
		<float name="metallic" value="0.0" />
		<float name="specular" value="0.0" />
		<float name="roughness" value="0.0" />
		<float name="spec_tint" value="0.0" />
		<float name="anisotropic" value="0.0" />
		<float name="sheen" value="0.0" />
		<float name="sheen_tint" value="0.0" />
		<float name="clearcoat" value="0.0" />
		<float name="clearcoat_gloss" value="0.0" />
		<float name="spec_trans" value="1.0" />
	</bsdf>

<!-- Emitters -->



<!-- Shapes -->

	<shape type="obj">
		<string name="filename" value="meshes/untitled.obj"/>
		<ref id="mat-Sphere" name="bsdf"/>
		<emitter type="area">
			<texture type="bitmap" name="radiance">
				<string name="filename" value="textures/rosendal_park_sunset_8k.hdr"/>
				<boolean name="raw" value="true"/>
			</texture>
		</emitter>
		<boolean name="flip_normals" value="true"/>
	</shape>

</scene>
